      ],
      "@tutos-monorepo/template-driven-forms/update-attestation/data-access": [
        "libs/template-driven-forms/update-attestation/data-access/src/index.ts"
      ],
      "@tutos-monorepo/template-driven-forms/update-attestation/feature": [
        "libs/template-driven-forms/update-attestation/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
