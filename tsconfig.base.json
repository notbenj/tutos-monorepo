      "@tutos-monorepo/template-driven-forms/shared/attestation-form/data-access": [
        "libs/template-driven-forms/shared/attestation-form/data-access/src/index.ts"
      ],
      "@tutos-monorepo/template-driven-forms/shared/attestation-form/ui": [
        "libs/template-driven-forms/shared/attestation-form/ui/src/index.ts"
