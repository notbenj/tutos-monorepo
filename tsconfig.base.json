      ],
      "@tutos-monorepo/template-driven-forms/attestations/feature": [
        "libs/template-driven-forms/attestations/feature/src/index.ts"
      ],
      "@tutos-monorepo/template-driven-forms/create-attestation/feature": [
        "libs/template-driven-forms/create-attestation/feature/src/index.ts"
